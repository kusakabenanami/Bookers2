

<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%= render 'users/list', user: current_user, book_new: @book %>
    </div>

    <div class="col-lg-8">
      <h2>Books</h2>
        <table class="table table-striped">
          <th>
            <td>Title</td>
          </th>
          <th>
            <td>Opinion</td>
          </th>
            <% @books.each do |book| %>
            <tr>
              <td><%= image_tag book.user.get_profile_image(100, 100) %></td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
            </tr>
            <% end %>
          </table>
    </div>
  </div>
</div>

