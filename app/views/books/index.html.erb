
<h2>Books</h2>
<% @books.each do |book| %>
  <div>
  <%= link_to image_tag user_path(book.user) do %>
    <p><%= image_tag book.user.get_profile_image(100, 100) %></p>
  <% end %>
    <li><%= link_to book.title, book_path(book) %></li>
    <p><%= book.body %></p>
  </div>
<% end %>

<h2>New Book</h2>
