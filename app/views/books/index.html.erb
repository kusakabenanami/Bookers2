<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%= render 'users/list', user: current_user, book_new: @book %>
    </div>

    <div class="col-lg-8 offset-md-1">
      <h2>Books</h2>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
            <% @books.each do |book| %>
            <tr>
              <td><%= image_tag book.user.get_profile_image(100, 100) %></td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
            </tr>
            <% end %>
          </table>
    </div>
  </div>
</div>

