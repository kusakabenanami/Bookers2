<% @books.each do |book| %>
  <div>
    <%= link_to book_path(book.id) do %>
      <%= image_tag book.get_image %>
    <% end %>
    <p>投稿ユーザー画像：<%= image_tag 'sample-author1.jpg' %></p>
    <p>ショップ名：<%= book.shop_name %></p>
    <p>説明：<%= book.caption %></p>
    <p>ユーザーネーム：<%= book.user.name %></p>
    <p>投稿日時：<%= @book.created_at.strftime('%Y/%m/%d') %></p>
    <% if @book.user == current_user %>
      <%= link_to "削除", book_path(@book), method: :delete %>
    <% end %>
  </div>
<% end %>

<table>
  <thead>
    <tr>
      <td>name</td>
