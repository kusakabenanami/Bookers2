<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%= render 'list', user: current_user, book_new: @book %>
    </div>

    <div class="col-lg-8 offset-md-1">
      <h2>Users</h2>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <% @users.each do |user| %>
            <tr>
              <td><%= image_tag user.get_profile_image(100, 100) %></td>
              <td><%= user.name %></td>
              <td><%= link_to "show", user_path(user.id) %></td>
            </tr>
            <% end %>
          </table>
    </div>
  </div>
</div>

